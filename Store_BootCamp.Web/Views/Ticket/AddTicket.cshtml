@using Store_BootCamp.Domain.Models.Tickets
@model Store_BootCamp.Application.ViewModels.Ticket.TicketViewModel

<div class="ui-box bg-white mb-5">
    <div class="ui-box-title">ایجاد تیکت جدید</div>
    <div class="ui-box-subtitle">
        فرم زیر را پر کنید (توضیحات کامل تر روند پاسخ دهی را کوتاه تر
        می
        کند.)
    </div>
    <div class="ui-box-content">
        <!-- start of add-ticket-form -->
        <form  class="add-ticket-form" asp-area="" asp-controller="Ticket" asp-action="AddTicket">
            <div class="row">
                <div class="col-md-6">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <label class="label">موضوع</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="">
                    </div>
                    <!-- end of form-element -->
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <label class="label">بخش</label>
                        <select class="select2" asp-for="TicketSection" asp-items="Html.GetEnumSelectList<TicketSection>()">
                            <option selected="selected" >بخش...</option>
                        </select>
                    </div>
                    <!-- end of form-element -->
                </div>
                <div class="col-md-6">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <label class="label">اولویت</label>
                        <select asp-for="TicketPriority" asp-items="Html.GetEnumSelectList<TicketPriority>()" class="select2 " name="priority" id="priority" data-select2-id="select2-data-priority" tabindex="-1" aria-hidden="true">
                            <option selected="selected" >درجه اهمیت</option>

                        </select>
                    </div>
                    <!-- end of form-element -->
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <label class="label">پیام</label>
                        <textarea asp-for="Text" rows="5" class="form-control" placeholder="متن پیام"></textarea>
                    </div>
                    <!-- end of form-element -->
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary px-4">ثبت و ارسال <i class="ri-ball-pen-line ms-2"></i></button>
                </div>
            </div>
        </form>
        <!-- end of add-ticket-form -->
    </div>
</div>