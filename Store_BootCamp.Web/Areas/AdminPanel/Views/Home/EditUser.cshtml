@model Store_BootCamp.Application.ViewModels.Account.UserViewmodel
<div class="container">
    <div class="row">
        <form class="col-4" asp-area="AdminPanel" asp-controller="Home" asp-action="EditUser" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input asp-for="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">User Name</label>
                <input asp-for="username" type="text" class="form-control" id="exampleInputPassword1" value="@Model.username" placeholder="UserName">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">fullname</label>
                <input asp-for="fullname" type="text" class="form-control" id="exampleInputPassword1" value="@Model.fullname" placeholder="fullname">
            </div>   
            <div class="form-group">
                <label style="display: inline-block">is Active : </label>
                <input style="opacity: unset; position: unset;display: inline-block" asp-for="isActive" type="checkbox" checked="@Model.isActive" class="checkbox">
            </div>
            <div class="form-group">
                <label>is Admin :</label>
                <input style="opacity: unset; position: unset;display: inline-block" asp-for="isAdmin" type="checkbox" checked="@Model.isAdmin" class="checkbox">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
    </div>
