@model List<Store_BootCamp.Domain.Models.Contacts.ContactUs>
@{
    ViewData["Title"] = "پیام ها";
}

<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/AdminPanel">خانه</a>
            </li>
            <li class="active">@ViewData["Title"]</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Header -->
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">

            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- /Page Header -->
    <!-- Page Body -->
    <div class="page-body">

        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="widget">
                            <div class="widget-header bordered-bottom bordered-themesecondary">
                                <i class="widget-icon fa fa-tags themesecondary"></i>
                                <span class="widget-caption themesecondary">لیست پیام ها</span>
                            </div><!--Widget Header-->
                            <div class="widget-body no-padding">
                                <div class="tickets-container">
                                    <ul class="tickets-list">
                                        @if (Model != null && Model.Any())
                                        {
                                            @foreach (var message in Model)
                                            {
                                                <li class="ticket-item">
                                                    <div class="row">
                                                        <div class="ticket-user col-lg-3 col-sm-3">
                                                            <img src="/assets/img/avatars/adam-jansen.jpg" class="user-avatar">
                                                            <span class="user-at">نام و نام خانوادگی : </span>
                                                            <span class="user-name">@message.FullName</span>
                                                        </div>
                                                        <div class="ticket-user col-lg-3 col-sm-3">
                                                            <img src="/assets/img/avatars/adam-jansen.jpg" class="user-avatar">
                                                            <span class="user-at">با ایمیل :  </span>
                                                            <span class="user-name">@message.Email</span>
                                                        </div>
                                                        <div class="ticket-time  col-lg-3 col-sm-3 col-xs-3">
                                                            <div class="divider hidden-md hidden-sm hidden-xs"></div>
                                                            <i class="fa fa-clock-o"></i>
                                                            <span class="user-at">در ساعت : </span>
                                                            <span class="time">@message.CreateDate</span>
                                                        </div>
                                                        <div class="ticket-type  col-lg-2 col-sm-6 col-xs-12">
                                                            <span class="divider hidden-xs"></span>
                                                            <span class="type">موضوع پیام </span>
                                                            <span class="time">@message.Title</span>
                                                        </div>
                                                        <a href="#" class="show-details" data-toggle="modal" data-target="#messageModal" data-message-id="@message.Id">
                                                            <div class="ticket-state bg-palegreen">
                                                                <i class="fa fa-info"></i>
                                                            </div>
                                                        </a>
                                                    </div>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
    <!-- /Page Body -->
</div>
<!-- Modal -->
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">جزئیات پیام</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model!=null && Model.Any())
                {
                    @foreach (var desc in Model)
                    {
                        <label>موضوع پیام</label>
                        <h3>@desc.Title</h3>
                        <br />
                        <label>متن پیام</label>
                        <p>@desc.Description.</p>
                    }
                }
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.show-details').click(function () {
                var messageId = $(this).data('message-id');
                // اکنون می‌توانید با استفاده از messageId اطلاعات مربوط به پیام را از سمت سرور دریافت کنید
                // سپس این اطلاعات را در مودال نمایش دهید
                // برای نمونه، اینجا یک الرت به عنوان مثال استفاده شده است
                alert('شناسه پیام: ' + messageId);
            });
        });
    </script>
}
