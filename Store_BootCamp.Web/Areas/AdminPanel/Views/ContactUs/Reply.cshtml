@model Store_BootCamp.Application.ViewModels.ContactUs.ReplyViewModel
@{
    ViewData["Title"] = "پاسخ";
}

<div class="container">
    <h2>پاسخ به پیام</h2>
    <form asp-action="SendReply" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="UserEmail" />

        <div class="form-group">
            <label asp-for="ReplyTitle"></label>
            <input asp-for="ReplyTitle" class="form-control" />
            <span asp-validation-for="ReplyTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReplyMessage"></label>
            <textarea asp-for="ReplyMessage" class="form-control" rows="5"></textarea>
            <span asp-validation-for="ReplyMessage" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">ارسال پاسخ</button>
    </form>
</div>
